    function Zeng() {
        var count = $("#i").val();
        $("#i").val(Number(Number(count) + 1));
    }
    function Fid(ids) {
        $('#h3').val(ids);
    }
    function tianjia(aac) {
        var ids = aac;
        var kuai = "kuai" + ids;
        var dan = "dan" + ids;
        $("#h1").val(kuai);
        $("#h2").val(dan);
        $("#h3").val();
        if ($("#h3").val() == "") {
            alert('快递单号没有填！')
        }
        
        var z1 = $("#h1").val();
        var z2 = $("#h2").val();

        $('#z1').val($("#" + z1).val());
        $('#z2').val($("#" + z2).val());
       
        WayBiilNumber = $('#z1').val();                  //快递单号
        WayBillOrderId = $("#h3").val();            //订单号
        WayBillExpress = $('#z2').val();//快递名称
        
        $.ajax({
            url: 'http://js/api/GetVf',
            data: { WayBiilNumber: WayBiilNumber, WayBillOrderId: WayBillOrderId, WayBillExpress},
            type: 'get',
            dataType: 'json',
            success: function (d) {
                if (d > 0) {
                    alert("成功发货！")
                    location.href = "/Order/Index";
                }
                else {
                    alert("发货失败！")
                }
            }
        })
        
    }
