<!-- 注意：如果你直接复制所有代码到本地，上述js路径需要改成你本地的 -->
<script>
    layui.use('table', function () {
        var table = layui.table;
        table.render({
            elem: '#test'
            , url: 'http://js/api/ShowFunction'
            , cols: [[
                { type: 'checkbox', fixed: 'left' }
                , { field: 'FId', width: 80, title: '序号', sort: true }
                , { field: 'FName', width: 100, title: '功能名称' }
                , { field: 'FCoding', width: 100, title: '功能编码' }
                , { field: 'FTime', width: 180, title: '更新时间', sort: true }
                , { field: 'FState', title: '状态', width: 100, templet: '#switchTpl', unresize: true }
                , { fixed: 'right', title: '操作', toolbar: '#barDemo', width: 200 }
            ]]
            , id: 'testReload'
            , page: true
            , limit: 10
            , limiits: [10, 20]
        });
        table.on('tool(test)', function (obj) {
            var data = obj.data.FId;
            //console.log(obj)
            if (obj.event === 'del') {
                layer.confirm('真的删除行么', function (index) {


                    console.log(data);
                    $.ajax({
                        url: 'http://js/api/DelFunction',
                        data: { ids: data },
                        type: 'get',
                        dataType: 'json',
                        success: function (d) {
                            if (d > 0) {
                                alert("删除成功");
                                location.reload();
                            }
                            else {
                                alert("删除失败");
                                return;
                            }
                        }
                    })
                });
            }
        })
        var $ = layui.$, active = {
            getCheckData: function () {
                var ids = [];
                var checkStatus = table.checkStatus('testReload')
                    , data = checkStatus.data;
                for (var i = 0; i < data.length; i++) {
                    ids += ',' + data[i].FId;
                }
                ids = ids.substr(1);
                console.log(ids);
                $.ajax({
                    url: "http://js/api/DelFunction?ids=" + ids,
                    type: "get",
                    dataType: "json",
                    success: function (d) {
                        parent.layer.msg("删除成功！");
                        window.location.reload();
                    }
                })
            }, chaxun: function () {

                table.reload('testReload', {
                    page: {
                        curr: 1 //重新从第 1 页开始
                    }
                    , where: {
                        FCoding: $("#txtbian").val(),
                        FName: $("#txtname").val(),
                        FState: $("#selectzhuang").val()

                    }
                }, 'data');
            }


        }        //监听启用操作
        //form.on('switch(sexDemo)', function (obj) {
        //    layer.tips(this.value + ' ' + this.name + '：' + obj.elem.checked, obj.othis);
        //})
        $('.demoTable .layui-btn').on('click', function () {
                var type = $(this).data('type');
                active[type] ? active[type].call(this) : '';
            })
        });
</script>

