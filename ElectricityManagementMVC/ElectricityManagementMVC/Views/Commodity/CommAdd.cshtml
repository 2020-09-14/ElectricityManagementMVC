            <tr>
                <td>
                    <h3 style="float:right">售价</h3>
                    
                </td>
                <td>
                     <input type="text" id="price" />
                </td>
            </tr>
            <tr>

                <td colspan="2" >
                    <div style="margin-left:316px">
                        <input type="button" class="btn btn-info" value="确定" />
                        <input type="button" class="btn btn-info" value="取消" />
                    </div>
                    
                </td>
            </tr>
        </table>
     
</div>
</body>
</html>
<script>
    $(function () {
        Show();
        Show3();
    }) 
    //加载一级联动
    function Show() {
        $.ajax({
            url: 'http://js/api/Claf',
            type: 'get',
            dataType: 'json',
            success: function (d) {
                $("#Select1").empty();
                $('#Select1').append('<option value="">请选择</option>');
                $(d).each(function () {
                    var lin = '<option value="' + this.classifyId + '">' + this.cname + '</option>'
                    $('#Select1').append(lin);
                })
            }
        })
    }
     //加载二级联动
    function Show1() {
        $.ajax({
            url: 'http://js/api/GetClaf',
            type: 'get',
            data: { ids: $('#Select1').val() },
            dataType: 'json',
            success: function (d) {
                $("#Select2").empty();
                $('#Select2').append('<option value="">请选择</option>');
                $(d).each(function () {
                    var lin = '<option value="' + this.classifyId + '">' + this.cname + '</option>'
                    $('#Select2').append(lin);
                })
            }
        })
    }
     //加载三级联动
    function Show2() {
        $.ajax({
            url: 'http://js/api/GetClaf',
            type: 'get',
            data: { ids: $('#Select2').val() },
            dataType: 'json',
            success: function (d) {
                $("#Select3").empty();
                $('#Select3').append('<option value="">请选择</option>');
                $(d).each(function () {
                    var lin = '<option value="' + this.classifyId + '">' + this.cname + '</option>'
                    $('#Select3').append(lin);
                })
            }
        })
    }
     //加载品牌
    function Show3() {
        $.ajax({
            url: 'http://js/api/Pinpai',
            type: 'get',
         
            dataType: 'json',
            success: function (d) {
                $("#Brand").empty();
                $('#Brand').append('<option value="">请选择</option>');
                $(d).each(function () {
                    var lin = '<option value="' + this.brandId + '">' + this.Bname + '</option>'
                    $('#Brand').append(lin);
                })
            }
        })
    }
</script>
