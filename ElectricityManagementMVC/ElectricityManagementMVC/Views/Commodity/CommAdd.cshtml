                <td>
                    <h3 style="float:right">商品名称</h3>
                </td>
                <td>
                    <input type="text" id="tetName" />
                </td>
            </tr>

            <tr>
                <td>
                    <h3 style="float:right">商品属性</h3>
                </td>
                <td>
                    品牌
                    <select id="Brand" class="btn btn-info">
                        <option>请选择</option>

                    </select>
