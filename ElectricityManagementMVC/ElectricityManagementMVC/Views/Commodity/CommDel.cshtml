    <div style="margin-left: 545px; ">
        <input id="Hidden1" value="1" type="hidden" /><input id="Hidden2" value="" type="hidden" />
        <input class="" id="bu1" type="button" value="上一页" onclick="fist()" />
        <input style="margin-left:281px" id="bu1" class="" type="button" value="下一页" onclick="next()" />
        <select style="margin-left: 339px; " id="yema" onclick="Show()">
            <option value="3">3</option>
            <option value="10">10</option>
            <option value="100">100</option>
            <option value="2000">2000</option>

        </select>
        <script>
            function next() {
                var i = $("#Hidden1").val();//页码
                var j = $("#Select1").val();//页数
                var count = $("#Hidden2").val();//总数据
                var lin = Number(Math.ceil(count / j));

                if (i < lin) {
                    $("#Hidden1").val(Number(Number($("#Hidden1").val()) + 1));
                }
                
                Xian();

            }
            function fist() {
                if ($("#Hidden1").val() == "1") {
                    $("#Hidden1").val(1);
                }
                else {
                    $("#Hidden1").val(Number(Number($("#Hidden1").val()) - 1));
                }
                Xian();

            }
        </script>
    </div>
   


    <script>
        $(function () {
            Show("");
            Show11();
            $("#ck").click(function () {
                $(".ck").each(function () {

                    $(this).attr("checked", !$(this).attr("checked"))
                })

            })
            var picker1 = $('#datetimepicker1').datetimepicker({

                format: 'YYYY-MM-DD',

                locale: moment.locale('zh-cn'),

                //minDate: '2016-7-1'

            });

            var picker2 = $('#datetimepicker2').datetimepicker({

                format: 'YYYY-MM-DD',

                locale: moment.locale('zh-cn')

            });
            //动态设置最小值
            picker1.on('dp.change', function (e) {
                picker2.data('DateTimePicker').minDate(e.date);

            });
            //动态设置最大值
            picker2.on('dp.change', function (e) {

                picker1.data('DateTimePicker').maxDate(e.date);

            });
            //全选

        })

        // { "brandid": 13, "img": "/Images/201020043952893396.png", "bname": "张春雨", "corporation": "123", "state": true, "creaTime": "2020-10-20T16:40:06" }, { "brandid": 14, "img": "/Images/201020064652534180.jpg", "bname": "123", "corporation": "123", "state": true, "creaTime": "2020-10-20T18:46:59" }]
        function Show(ids) {
            classIfyId = $("#Select3").val();

            creaTime = $("#c1").val();
            delTime = $("#c2").val();
            
            name = $("#goodsname").val();
            bian = $("#SKU").val();
            
            $.ajax({
                url: 'http://js/api/WcDelGoods',
                data: {
                    page: $("#Hidden1").val(),
                    rows: $("#yema").val(),
                    ids: ids,
                    classIfyId: classIfyId,
                    creaTime: creaTime,
                    delTime: delTime,
                    name: name,
                    bian: bian,
                  
                },
                type: 'get',
                dataType: 'json',
                success: function (d) {
                    $("#Hidden2").val(d.count);
                    $('#tb').empty();
                    $.each(d.list, function (index, item) {
                        var line = '<tr>'
                            + '<td><input class="ck" type="checkbox"   value="' + item.commodityId + '" /></td>'
                            + '<td>' + item.commodityId + '</td>'
                            + '<td>' + item.recommend + '</td>'
                            + '<td>' + item.bname + '</td>'
                            + '<td><img id="imgas" style="width:40px;height:40px" src="http://js' + item.img + '" alt="" /><span>商品:' + item.sCname + '</span> </td>'
                            + '<td>' + item.introduce + '</td>'
                            + '<td>' + item.inventory + '</td>'
                            + '<td>' + (item.state == 1 ? "在售中" : item.state == 2 ? "已售馨" : item.state == 3 ? "已下架" : "已下架") + '</td>'
                            + '<td>' + item.price + '</td>'
                            + '<td>' + item.creaTime + '</td>'
                            + '<td><a href="#" onclick = "del(' + this.commodityId + ')"><p>删除</p> <a href="#" onclick = "Huan(' + this.commodityId + ')"><p>还原</p></td>'
                            + '</tr>'
                        $('#tb').append(line);
                    })
                }
            })
        }
        //上架
        function Sj(id) {
            var ids = JSON.stringify(id);
            $.ajax({
                url: 'http://js/api/Sj?ids=' + ids,

                type: 'get',
                dataType: 'json',
                success: function (d) {
                    if (d > 0) {
                        alert('上架成功！')
                    } else {
                        alert('上架失败！')
                    }
                }
            })
        }
        function Xq(ids) {
            $.ajax({
                url: 'http://js/api/Xq?ids=' + ids,
                type: 'get',
                dataType: 'json',
                success: function (d) {
                    $("#Xqa").empty();
                    var line = ' <img id="imagett" style="width:40px;height:40px" src="http://js' + d.img + '" alt="" /> 商品:' + d.sCname + '&nbsp;  规格 ' + d.introduce+':'
                    $("#Xqa").append(line);
                }
            })
        }
        function Show11() {
            $.ajax({
                url: 'http://js/api/Claf',
                type: 'get',
                dataType: 'json',
                success: function (d) {
                    $("#Select1").empty();
                    $('#Select1').append('<option value="">请选择</option>');
                    $(d).each(function () {
                        var lin = '<option value="' + this.classifyId + '">' + this.cname + '</option>'
                        $('#Select1').append(lin);
                    })
                }
            })
        }
        //加载二级联动
        function Show1() {
            $.ajax({
                url: 'http://js/api/GetClaf',
                type: 'get',
                data: { ids: $('#Select1').val() },
                dataType: 'json',
                success: function (d) {
                    $("#Select2").empty();
                    $('#Select2').append('<option value="">请选择</option>');
                    $(d).each(function () {
                        var lin = '<option value="' + this.classifyId + '">' + this.cname + '</option>'
                        $('#Select2').append(lin);
                    })
                }
            })
        }
        //加载三级联动
        function Show2() {
            $.ajax({
                url: 'http://js/api/GetClaf',
                type: 'get',
                data: { ids: $('#Select2').val() },
                dataType: 'json',
                success: function (d) {
                    $("#Select3").empty();
                    $('#Select3').append('<option value="">请选择</option>');
                    $(d).each(function () {
                        var lin = '<option value="' + this.classifyId + '">' + this.cname + '</option>'
                        $('#Select3').append(lin);
                    })
                }
            })
        }
        function del(ids) {
            $.ajax({
                url: 'http://js/api/DelComm',
                data: { ids: ids },
                type: 'get',
                dataType: 'json',
                success: function (d) {
                    if (d > 0) {
                        alert('删除成功!')
                        Show("");
                    }
                    else {
                        alert('删除失败!')
                    }
                }
            })
        }
        function Huan(ids) {
            $.ajax({
                url: 'http://js/api/Huan',
                data: { ids: ids },
                type: 'get',
                dataType: 'json',
                success: function (d) {
                    if (d > 0) {
                        alert('还原成功!')
                        Show("");
                    }
                    else {
                        alert('还原失败!')
                    }
                }
            })
        }
        function delAll() {
            var id = "";
            //for (var i = 0; i < $(".ck").length; i++) {
            //    if ($(".ck").eq(i).attr("checked") == "checked") {
            //        id += $(".ck").eq(i).val() + ","
            //    }
            //}
            $('input[Class="ck"]:checked').each(function () {

                id += $(this).val() + ',';

                //Ids += ',';
            });
            if (id == "") {
                alert("请选择删除项")
                return false;

            }
            else {
                if (!confirm("是否删除选择项")) return true;
            }
            id = id.substring(0, id.length - 1);
            //alert(id);
            del(id);
        }

    </script>
</body>
